{
  "name": "capylabs-babylonjs",
  "version": "0.0.1",
  "description": "CapyLabs with Babylon.js",
  "author": "Masaru Yamagishi <akai_inu@live.jp>",
  "license": "Apache-2.0",
  "private": true,
  "keywords": [
    "BabylonJS",
    "3DCG",
    "Web"
  ],
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.22.0",
    "typescript": "~4.8.4",
    "vite": "^3.0.7"
  },
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev:samples": "npm run -w packages/capylabs-samples dev",
    "build:samples": "npm run -w packages/capylabs-samples build && mkdir -p dist/samples && cp -r packages/capylabs-samples/dist/* dist/samples/ && cp index.html dist/index.html"
  },
  "dependencies": {
    "@babylonjs/core": "^5.0.0",
    "@babylonjs/gui": "^5.0.0",
    "@babylonjs/loaders": "^5.0.0",
    "@babylonjs/materials": "^5.0.0"
  }
}
